@model UpdateMovieVM


<div class="row">
    <div class="card">
        <h3>Update Movie Panel</h3>
        <div class="card-body">
            <form asp-action="Edit" method="post">
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" type="text" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PublishDate"></label>
                    <input asp-for="PublishDate" type="date" class="form-control" />
                    <span asp-validation-for="PublishDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DirectorID"></label>
                    <select asp-items="@Model.Directors" class="form-control" asp-for="DirectorID">
                        <option disabled selected>Lütfen seçim yapınız.</option>
                    </select>
                    <span asp-validation-for="DirectorID" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="MovieID" type="hidden" />
                </div>
                <div class="form-group">
                    <label asp-for="Actors"></label>
                    <div class="row">
                        @for (var i = 0; i < Model.Actors.Count; i++)
                        {
                            <div class="card col-md-6 m-2">
                                <div class="card-body">
                                    @Html.CheckBoxFor(model=>model.Actors[i].IsSelected)
                                    <label>@Model.Actors[i].FullName</label>
                                    @Html.HiddenFor(model=>model.Actors[i].ActorID)
                                </div>
                            </div>
                        }
                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-success" value="GÜNCELLE" />
                </div>
            </form>

        </div>

    </div>

</div>